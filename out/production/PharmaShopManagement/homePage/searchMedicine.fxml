<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="homePage.SearchMedicine">
   <top>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TextField prefHeight="25.0" prefWidth="344.0" promptText="Search for Medicine" fx:id="searchField"/>
            <Button mnemonicParsing="false" onAction="#searchButton_Click" text="Search" />
            <Button layoutX="374.0" layoutY="20.0" mnemonicParsing="false" onAction="#stockButton_Click" text="Stock" />
         </children>
         <BorderPane.margin>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <center>
      <TableView fx:id="table" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn prefWidth="160.0" text="Name" fx:id="nameColumn" />
            <TableColumn minWidth="8.0" prefWidth="94.0" text="Purchase Rate" fx:id="purchaseRate" />
            <TableColumn prefWidth="83.0" text="Saling Price" fx:id="salingPrice"/>
            <TableColumn minWidth="0.0" prefWidth="78.0" text="Batch No" fx:id="batchNo"/>
            <TableColumn minWidth="0.0" prefWidth="83.0" text="Expiry" fx:id="expiryDate"/>
            <TableColumn minWidth="0.0" prefWidth="130.0" text="Supplier" fx:id="supplierName"/>
            <TableColumn minWidth="0.0" prefWidth="63.0" text="Quantity" fx:id="quantity"/>
        </columns>
      </TableView>
   </center>
</BorderPane>
